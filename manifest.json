{
  "manifest_version": 3,
  "name": "LinkedIn Guard",
  "description": "Report suspicious LinkedIn content and receive mentor tips. Flags sync across users via backend.",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3000/*"
  ]
}

